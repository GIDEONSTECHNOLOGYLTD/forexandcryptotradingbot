# New Listing Bot Configuration (Optional - customize investment amounts)
NEW_LISTING_BUY_AMOUNT=50          # USDT to invest per new listing (default: 50)
NEW_LISTING_TAKE_PROFIT=30         # Take profit percentage (default: 30%)
NEW_LISTING_STOP_LOSS=15           # Stop loss percentage (default: 15%)
NEW_LISTING_MAX_HOLD=3600          # Max hold time in seconds (default: 3600 = 1 hour)
NEW_LISTING_CHECK_INTERVAL=60      # Check for new listings every X seconds (default: 60)

# Admin Auto-Trader Configuration (Optional - customize trading limits)
ADMIN_MIN_TRADE_SIZE=5             # Minimum trade size in USDT (OKX minimum: 5)
ADMIN_MAX_TRADE_SIZE=1000          # Maximum trade size per position (default: 1000)
ADMIN_TARGET_PROFIT=15             # Target profit % - LOWERED for consistent wins! (was 50%, now 15%)
ADMIN_STOP_LOSS=5                  # Stop loss % - Tighter to protect capital (was 15%, now 5%)
ADMIN_MOMENTUM_MIN_BALANCE=50      # Minimum balance for momentum strategy (default: 50)

# Small Profit Accumulation Strategy (RECOMMENDED!)
ADMIN_SMALL_PROFIT_MODE=true       # Enable small profit mode (true/false)
ADMIN_SMALL_WIN_TARGET=5           # Auto-exit at just 5% profit! ($0.50 on $10 = consistent wins)
ADMIN_QUICK_EXIT_THRESHOLD=10      # Maximum profit to wait for (10% cap)

