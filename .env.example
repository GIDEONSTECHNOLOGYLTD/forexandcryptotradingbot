# OKX API Keys (Get these from OKX: https://www.okx.com/account/my-api)
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here

# Telegram Notifications (Optional - Get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# MongoDB Database (Required for multi-user system)
# Option 1: MongoDB Atlas (Free Cloud): https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trading_bot
# Option 2: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/

# JWT Secret Key (for user authentication - CHANGE THIS!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-to-random-string

# Encryption Key (for encrypting user API keys)
ENCRYPTION_KEY=your-fernet-encryption-key-here

# Payment Configuration (Optional - for subscription features)
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here
COINGATE_API_KEY=your_coingate_api_key_here

# New Listing Bot Configuration (Optional - customize investment amounts)
NEW_LISTING_BUY_AMOUNT=50          # USDT to invest per new listing (default: 50)
NEW_LISTING_TAKE_PROFIT=30         # Take profit percentage (default: 30%)
NEW_LISTING_STOP_LOSS=15           # Stop loss percentage (default: 15%)
NEW_LISTING_MAX_HOLD=3600          # Max hold time in seconds (default: 3600 = 1 hour)
NEW_LISTING_CHECK_INTERVAL=60      # Check for new listings every X seconds (default: 60)

# IMPORTANT: Start with paper trading mode (PAPER_TRADING=True in config.py)
# Only switch to live trading after thorough testing!
